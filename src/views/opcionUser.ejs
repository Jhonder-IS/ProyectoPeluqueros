<!DOCTYPE html>
<html lang="en">
<!-- opciones disponibles para el usuario -->
<head>
  <meta charset="UTF-8" />
  <title>Opcion Usuario</title>
  <link rel="stylesheet" href="/css/main.css">
  <%- include("partials/head") %>
</head>

<body>
  <%- include("partials/navigation") %>
  <hr>
     <!-- crea un contenedor que almacenará las opciones del usuario -->
    <div class="container vh-100 d-flex justify-content-center align-items-center">
      <div class="card animated flipInX bg-dark p-3 border-secondary">
        <div class="card-header bg-dark text-white text-center">
          <h3>Opciones disponibles </h3>
          <h3>Seleccione una opción</h3>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <div class="input-group mb-3">
              <select class="form-select" id="opcionUser">
                <option selected>Choose...</option>
                <!-- crear cita usuario -->
                <option value="1">Crear citas</option>
                <!-- modificar cita usuario -->
                <option value="2">Modificar citas</option>
                <!-- eliminar citas -->
                <option value="3">Eliminar citas</option>
                <!-- consultar datos -->
                <option value="4">Consultar citas</option>
              </select>
            </div>
            <!-- button seleccionar para desplegar la opcion del usuario -->
            <button class="btn btn-secondary btn-block" id="submit">Seleccionar</button>
          </div>
        </div>
      </div>
    </div>

    <script src="/scripts/opcionUser.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>