<!DOCTYPE html>
<html lang="en">
  <!-- muestra el calendario de cada peluquero con sus horarios definidos -->
  <head>
    <meta charset="UTF-8" />
    <title>Calendario</title>
    <link rel="stylesheet" href="/css/calendario.css" />
    <%- include("partials/head") %>
  </head>

  <body>
    <%- include("partials/navigation") %>
    <hr />
    <div id="container">
      <div id="header">
        <div id="monthDisplay"></div>
        <div>
          <!--Estos botones sirven para cambiar de mes-->
          <button id="backButton">Anterior</button>
          <button id="nextButton">Siguiente</button>
        </div>
      </div>

      <div id="weekdays">
        <div>Domingo</div>
        <div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Lunes</div>
        <div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Martes</div>
        <div>
          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Miércoles
        </div>
        <div>
          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Jueves
        </div>
        <div>
          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Viernes
        </div>
        <div>
          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Sábado
        </div>
      </div>

      <div id="calendar"></div>
    </div>
    <!--Deshabilita los días en lo que los peluqueros  ya han añadido los horarios-->
    <div id="newEventModal">
      <h2>Nuevo Evento</h2>

      <input id="eventTitleInput" placeholder="Evento" />

      <button id="saveButton">Guardar</button>
      <button id="cancelButton">Cancelar</button>
    </div>

    <div id="deleteEventModal">
      <h2>Evento</h2>

      <p id="eventText"></p>

      <button id="deleteButton">Borrar</button>
      <button id="closeButton">Cerrar</button>
    </div>

    <div id="modalBackDrop"></div>

    <script src="/scripts/calendarioLaboral.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
